# FlexJobs Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3003

# Database Configuration (Required)
DB_HOST=localhost
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=flexjobs_db
DB_PORT=5432

# Session Security
SESSION_SECRET=your-super-secret-session-key-here

# Job Scraping Configuration (Optional)
# Set to 'false' to disable specific sources
SCRAPE_INDEED=true
SCRAPE_LINKEDIN=true

# Google Custom Search Engine (Optional - for enhanced Google job search)
# Get these from: https://cse.google.com/ and https://console.cloud.google.com/
GOOGLE_CSE_API_KEY=your_google_cse_api_key_here
GOOGLE_CSE_ID=your_custom_search_engine_id_here

# SerpAPI (Optional - for direct Google Jobs API access)
# Get this from: https://serpapi.com/
SERP_API_KEY=your_serpapi_key_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3003,http://127.0.0.1:3000,http://127.0.0.1:3003

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
STRICT_RATE_LIMIT_MAX=5

# Logging Level
LOG_LEVEL=info

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_secure

# Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Production Environment Variables for Avatar Upload

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-app-avatars-bucket

# Image Processing
MAX_AVATAR_SIZE=5242880  # 5MB in bytes
AVATAR_DIMENSIONS=300x300
AVATAR_QUALITY=85

# Security
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
AVATAR_UPLOAD_RATE_LIMIT=3  # uploads per 15 minutes
ENABLE_IMAGE_COMPRESSION=true

# CDN Configuration (optional)
CDN_BASE_URL=https://cdn.yourdomain.com
ENABLE_CDN=true

# Monitoring
ENABLE_AVATAR_ANALYTICS=true
LOG_LEVEL=info

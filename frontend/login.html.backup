<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log In - FlexJobs</title>
    <link rel="icon" type="image/png" href="images/f.png">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/style.css">
    <!-- Footer CSS -->
    <link rel="stylesheet" href="components/main-footer/main-footer.css">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="login-page">
    <!-- Main Header Component -->
    <div id="main-header-placeholder"></div>

    <!-- Breadcrumb -->
    <section class="breadcrumb-section">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a href="index.html" class="text-decoration-none">
                            <i class="fas fa-home me-1"></i>Home
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Log In</li>
                </ol>
            </nav>
        </div>
    </section>

    <!-- Main Login Section -->
    <main class="login-main">
        <div class="container-fluid">
            <div class="row min-vh-75">
                <!-- Login Form Column -->
                <div class="col-lg-6 col-md-8 col-12 mx-auto d-flex align-items-center">
                    <div class="login-form-container w-100">
                        <div class="text-center mb-4">
                            <h1 class="login-title">Welcome Back!</h1>
                            <p class="login-subtitle text-muted">Please sign in to your account.</p>
                        </div>

                        <!-- Social Login Buttons (Temporarily Disabled) -->
                        <div class="social-login-section mb-4" style="display: none;">
                            <button type="button" class="btn btn-outline-secondary w-100 mb-3 social-btn" disabled>
                                <i class="fab fa-google me-2"></i>Log in with Google (Coming Soon)
                            </button>
                            <button type="button" class="btn btn-outline-secondary w-100 mb-3 social-btn" disabled>
                                <i class="fab fa-apple me-2"></i>Log in with Apple (Coming Soon)
                            </button>
                        </div>

                        <!-- Divider (Hidden when social login disabled) -->
                        <div class="divider-section mb-4" style="display: none;">
                            <div class="divider-line"></div>
                            <span class="divider-text">OR</span>
                            <div class="divider-line"></div>
                        </div>

                        <!-- Login Form -->
                        <form id="loginForm" class="login-form">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="email" name="email" 
                                       placeholder="Enter your email" required>
                                <div class="invalid-feedback"></div>
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <div class="password-input-group">
                                    <input type="password" class="form-control" id="password" name="password" 
                                           placeholder="Enter your password" required>
                                    <button type="button" class="password-toggle-btn" id="passwordToggle">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <div class="invalid-feedback"></div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe">
                                    <label class="form-check-label" for="rememberMe">
                                        Remember me
                                    </label>
                                </div>
                                <a href="#" class="forgot-password-link">Forgot Password?</a>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 login-btn">
                                <span class="btn-text">Log In</span>
                                <span class="btn-spinner d-none">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </span>
                            </button>
                        </form>

                        <!-- Terms and Sign Up Link -->
                        <div class="login-footer mt-4">
                            <p class="terms-text text-center text-muted small mb-3">
                                By clicking "Log In" you agree to our 
                                <a href="#" class="text-decoration-none">Terms of Use</a> and 
                                <a href="#" class="text-decoration-none">Privacy Policy</a>.
                            </p>
                            
                            <div class="signup-link text-center">
                                <span class="text-muted">New to FlexJobs? </span>
                                <a href="registration.html" class="text-decoration-none fw-semibold">Join now!</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Hero Image Column - Hidden on Mobile -->
                <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center hero-image-column">
                    <div class="hero-image-container">
                        <img src="images/login.png" alt="Remote Work" class="hero-image">
                        <div class="hero-overlay">
                            <h3 class="hero-title" style="color: wheat !important;">Find Your Perfect Remote Job</h3>
                            <p class="hero-subtitle" style="color: rgb(255, 255, 255) !important">Join thousands of professionals who have found flexible work opportunities through FlexJobs.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <div id="footer-placeholder"></div>

    <!-- Notification Modal -->
    <div class="modal fade" id="notificationModal" tabindex="-1" aria-labelledby="notificationModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0 pb-0">
                    <div class="d-flex align-items-center w-100">
                        <div class="notification-icon me-3" id="notificationIcon">
                            <i class="fas fa-info-circle"></i>
                        </div>
                        <h5 class="modal-title mb-0" id="notificationModalLabel">Notification</h5>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body pt-2">
                    <p id="notificationMessage" class="mb-0">Your message will appear here.</p>
                </div>
                <div class="modal-footer border-0 pt-2">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Component Loader -->
    <script src="js/component-loader.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Apple Sign In SDK -->
    <script type="text/javascript" src="https://appleid.cdn-apple.com/appleauth/static/jsapi/appleid/1/en_US/appleid.auth.js"></script>
    <!-- Page-specific JavaScript -->
    <script src="js/login.js"></script>

    <!-- Custom Login Page Styling -->
    <style>
        /* Login Page Specific Styles */
        .login-page {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
        }

        .breadcrumb-section {
            background-color: #ffffff;
            padding: 1rem 0;
            border-bottom: 1px solid #dee2e6;
        }

        .breadcrumb {
            margin-bottom: 0;
            background-color: transparent;
        }

        .breadcrumb-item a {
            color: #004f6e;
            transition: color 0.2s ease;
        }

        .breadcrumb-item a:hover {
            color: #0066cc;
        }

        .breadcrumb-item.active {
            color: #6c757d;
        }

        .login-main {
            padding: 1.5rem 0; /* Reduced from 3rem */
        }

        .min-vh-75 {
            min-height: 75vh;
        }

        .login-form-container {
            max-width: 380px; /* Reduced from 450px */
            background: #ffffff;
            padding: 2rem 1.5rem; /* Reduced from 3rem 2.5rem */
            border-radius: 12px; /* Reduced from 16px */
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08); /* Lighter shadow */
            margin: 0 auto;
        }

        .login-title {
            font-size: 1.5rem; /* Reduced from 2rem */
            font-weight: 700;
            color: #004f6e;
            margin-bottom: 0.25rem; /* Reduced from 0.5rem */
        }

        .login-subtitle {
            font-size: 0.9rem; /* Reduced from 1.1rem */
            color: #6c757d;
            margin-bottom: 1.5rem; /* Reduced spacing */
        }

        /* Social Login Buttons */
        .social-btn {
            padding: 0.6rem 1rem; /* Reduced from 0.875rem 1.5rem */
            font-weight: 500;
            border: 2px solid #dee2e6;
            transition: all 0.2s ease;
            position: relative;
            font-size: 0.85rem; /* Reduced font size */
            margin-bottom: 0.75rem; /* Reduced spacing */
        }

        .social-btn:hover {
            border-color: #004f6e;
            background-color: #f8f9fa;
            transform: translateY(-1px);
        }

        .social-btn i {
            font-size: 1rem; /* Slightly reduced */
        }

        /* Divider */
        .divider-section {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 1rem 0; /* Reduced spacing */
        }

        .divider-line {
            flex: 1;
            height: 1px;
            background-color: #dee2e6;
        }

        .divider-text {
            padding: 0 1rem;
            color: #6c757d;
            font-size: 0.8rem; /* Reduced from 0.9rem */
            font-weight: 500;
        }

        /* Form Styling */
        .form-label {
            font-weight: 600;
            color: #004f6e;
            margin-bottom: 0.25rem; /* Reduced from 0.5rem */
            font-size: 0.85rem; /* Reduced font size */
        }

        .form-control {
            padding: 0.6rem 0.75rem; /* Reduced from 0.875rem 1rem */
            border: 2px solid #e9ecef;
            border-radius: 6px; /* Reduced from 8px */
            font-size: 0.9rem; /* Reduced from 1rem */
            transition: all 0.2s ease;
        }

        .form-control:focus {
            border-color: #004f6e;
            box-shadow: 0 0 0 0.15rem rgba(0, 79, 110, 0.15); /* Reduced shadow */
        }

        .form-control.is-invalid {
            border-color: #dc3545;
        }

        .password-input-group {
            position: relative;
        }

        .password-toggle-btn {
            position: absolute;
            right: 10px; /* Reduced from 12px */
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #6c757d;
            cursor: pointer;
            padding: 0;
            width: 20px; /* Reduced from 24px */
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .password-toggle-btn:hover {
            color: #004f6e;
        }

        .form-check-label {
            font-size: 0.85rem; /* Reduced from 0.95rem */
            color: #495057;
        }

        .forgot-password-link {
            color: #004f6e;
            text-decoration: none;
            font-size: 0.85rem; /* Reduced from 0.95rem */
            font-weight: 500;
        }

        .forgot-password-link:hover {
            color: #0066cc;
            text-decoration: underline;
        }

        /* Login Button */
        .login-btn {
            background: linear-gradient(135deg, #004f6e 0%, #0066cc 100%);
            border: none;
            padding: 0.65rem 1.5rem; /* Reduced from 0.875rem 2rem */
            font-size: 0.95rem; /* Reduced from 1.1rem */
            font-weight: 600;
            border-radius: 6px; /* Reduced from 8px */
            transition: all 0.2s ease;
            position: relative;
        }

        .login-btn:hover {
            background: linear-gradient(135deg, #003d5c 0%, #0052a3 100%);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(0, 79, 110, 0.3);
        }

        .login-btn:disabled {
            opacity: 0.7;
            cursor: not-allowed;
            transform: none;
        }

        .btn-spinner {
            margin-left: 0.5rem;
        }

        /* Footer Links */
        .terms-text {
            font-size: 0.75rem; /* Reduced font size */
            margin-bottom: 0.75rem; /* Reduced spacing */
        }

        .terms-text a {
            color: #004f6e;
        }

        .terms-text a:hover {
            color: #0066cc;
        }

        .signup-link {
            font-size: 0.85rem; /* Reduced font size */
        }

        .signup-link a {
            color: #004f6e;
        }

        .signup-link a:hover {
            color: #0066cc;
        }

        /* Hero Image Section */
        .hero-image-column {
            background: linear-gradient(135deg, #004f6e 0%, #0066cc 100%);
            color: white;
            position: relative;
            overflow: hidden;
        }

        .hero-image-container {
            position: relative;
            text-align: center;
            z-index: 2;
        }

        .hero-image {
            max-width: 70%; /* Reduced from 80% */
            height: auto;
            margin-bottom: 1.5rem; /* Reduced from 2rem */
            opacity: 0.9;
        }

        .hero-overlay {
            position: relative;
            z-index: 3;
        }

        .hero-title {
            font-size: 2rem; /* Reduced from 2.5rem */
            font-weight: 700;
            margin-bottom: 0.75rem; /* Reduced from 1rem */
            color: white;
        }

        .hero-subtitle {
            font-size: 1rem; /* Reduced from 1.2rem */
            color: rgba(255, 255, 255, 0.9);
            line-height: 1.5; /* Reduced from 1.6 */
            max-width: 350px; /* Reduced from 400px */
            margin: 0 auto;
        }

        /* Notification Modal Styling */
        #notificationModal .modal-content {
            border: none;
            box-shadow: 0 8px 32px rgba(0,0,0,0.12);
            border-radius: 12px;
        }

        #notificationModal .modal-header {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
            padding: 1.25rem;
        }

        #notificationModal .modal-title {
            font-weight: 600;
            font-size: 1.1rem;
            color: #004f6e;
        }

        #notificationModal .modal-body {
            padding: 1.25rem;
            font-size: 0.95rem;
            color: #495057;
            line-height: 1.5;
        }

        #notificationModal .modal-footer {
            padding: 1rem 1.25rem;
            background-color: #fff;
            border-bottom-left-radius: 12px;
            border-bottom-right-radius: 12px;
        }

        .notification-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
        }

        .notification-icon.success {
            background-color: #d4edda;
            color: #155724;
        }

        .notification-icon.error {
            background-color: #f8d7da;
            color: #721c24;
        }

        .notification-icon.warning {
            background-color: #fff3cd;
            color: #856404;
        }

        .notification-icon.info {
            background-color: #d1ecf1;
            color: #0c5460;
        }

        /* Mobile Responsive */
        @media (max-width: 768px) {
            .login-main {
                padding: 1rem 0; /* Further reduced for mobile */
            }

            .login-form-container {
                padding: 1.5rem 1rem; /* Reduced padding for mobile */
                margin: 0.5rem; /* Reduced margin */
                border-radius: 8px; /* Smaller border radius */
                max-width: 100%; /* Full width on mobile */
            }

            .login-title {
                font-size: 1.3rem; /* Further reduced for mobile */
            }

            .login-subtitle {
                font-size: 0.8rem; /* Further reduced for mobile */
                margin-bottom: 1rem;
            }

            .social-btn {
                padding: 0.5rem 0.75rem; /* Reduced padding for mobile */
                font-size: 0.8rem; /* Smaller font */
                margin-bottom: 0.5rem;
            }

            .form-control {
                padding: 0.5rem 0.75rem; /* Reduced padding for mobile */
                font-size: 0.85rem; /* Smaller font */
            }

            .login-btn {
                padding: 0.6rem 1.25rem; /* Reduced padding for mobile */
                font-size: 0.9rem; /* Smaller font */
            }

            .terms-text {
                font-size: 0.7rem; /* Even smaller for mobile */
                margin-bottom: 0.5rem;
            }

            .signup-link {
                font-size: 0.8rem; /* Smaller for mobile */
            }

            /* Hide hero image on mobile */
            .hero-image-column {
                display: none !important;
            }

            /* Adjust container for mobile */
            .min-vh-75 {
                min-height: auto; /* Remove min-height constraint on mobile */
            }

            /* Reduce form spacing on mobile */
            .mb-3 {
                margin-bottom: 0.75rem !important;
            }

            .mb-4 {
                margin-bottom: 1rem !important;
            }

            .mt-4 {
                margin-top: 1rem !important;
            }
        }

        @media (max-width: 576px) {
            .login-form-container {
                padding: 1rem 0.75rem; /* Minimal padding for very small screens */
                margin: 0.25rem; /* Minimal margin */
            }

            .breadcrumb-section {
                padding: 0.5rem 0; /* Reduced breadcrumb padding */
            }

            .login-title {
                font-size: 1.2rem; /* Even smaller title */
            }

            .social-btn {
                padding: 0.45rem 0.5rem;
                font-size: 0.75rem;
            }

            .form-control {
                padding: 0.45rem 0.5rem;
                font-size: 0.8rem;
            }

            .login-btn {
                padding: 0.55rem 1rem;
                font-size: 0.85rem;
            }

            /* Minimize all spacing for very small screens */
            .divider-section {
                margin: 0.75rem 0;
            }

            .login-subtitle {
                margin-bottom: 0.75rem;
            }
        }

        /* Ensure the page fits in viewport */
        @media (max-height: 600px) {
            .login-main {
                padding: 0.5rem 0;
            }

            .login-form-container {
                padding: 1rem;
            }

            .login-title {
                font-size: 1.2rem;
                margin-bottom: 0.25rem;
            }

            .login-subtitle {
                font-size: 0.8rem;
                margin-bottom: 1rem;
            }

            .social-btn {
                padding: 0.4rem 0.75rem;
                margin-bottom: 0.5rem;
            }

            .divider-section {
                margin: 0.5rem 0;
            }

            .form-control {
                padding: 0.5rem 0.75rem;
            }

            .mb-3 {
                margin-bottom: 0.5rem !important;
            }

            .terms-text {
                font-size: 0.7rem;
                margin-bottom: 0.5rem;
            }
        }

        /* Animation Effects */
        .login-form-container {
            animation: fadeInUp 0.6s ease-out;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .social-btn,
        .form-control,
        .login-btn {
            transition: all 0.2s ease;
        }

        /* Focus States for Accessibility */
        .social-btn:focus,
        .form-control:focus,
        .login-btn:focus,
        .forgot-password-link:focus {
            outline: 2px solid #004f6e;
            outline-offset: 2px;
        }
    </style>
</body>
</html>

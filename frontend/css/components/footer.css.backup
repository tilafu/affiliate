/* ==========================================================================
   FOOTER COMPONENT STYLES
   ========================================================================== */

/* Mobile Footer Styles (< 992px) */
.mobile-footer {
    background: #212529;
    color: #adb5bd;
    padding: 2rem 0 1rem;
    margin-top: auto;
}

.mobile-footer__main {
    padding-bottom: 2rem;
}

.mobile-footer__brand {
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #495057;
}

.mobile-footer__logo {
    height: 40px;
    width: auto;
    margin-bottom: 1rem;
    filter: brightness(0) invert(1);
}

.mobile-footer__description {
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0;
    color: #adb5bd;
}

/* Mobile Accordion Sections */
.mobile-footer__accordion {
    margin-bottom: 2rem;
}

.mobile-footer__section {
    border-bottom: 1px solid #495057;
}

.mobile-footer__section-header {
    width: 100%;
    background: none;
    border: none;
    color: white;
    font-weight: 600;
    font-size: 1rem;
    padding: 1.25rem 0;
    text-align: left;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    transition: all 0.3s ease;
}

.mobile-footer__section-header:hover {
    color: #ffc107;
}

.mobile-footer__chevron {
    font-size: 0.875rem;
    transition: transform 0.3s ease;
}

.mobile-footer__section-header[aria-expanded="true"] .mobile-footer__chevron {
    transform: rotate(180deg);
}

.mobile-footer__section-content {
    padding: 0 0 1rem 0;
}

.mobile-footer__link {
    display: block;
    color: #adb5bd;
    text-decoration: none;
    padding: 0.5rem 0;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    border-left: 3px solid transparent;
    padding-left: 1rem;
}

.mobile-footer__link:hover {
    color: #ffc107;
    border-left-color: #ffc107;
    padding-left: 1.5rem;
}

/* Mobile Social Links */
.mobile-footer__social {
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #495057;
}

.mobile-footer__social-title {
    color: white;
    font-weight: 600;
    margin-bottom: 1rem;
    font-size: 1rem;
}

.mobile-footer__social-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
}

.mobile-footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: #495057;
    color: #adb5bd;
    border-radius: 50%;
    text-decoration: none;
    font-size: 1.25rem;
    transition: all 0.3s ease;
}

.mobile-footer__social-link:hover {
    background: #ffc107;
    color: #212529;
    transform: translateY(-2px);
}

/* Mobile Newsletter */
.mobile-footer__newsletter {
    margin-bottom: 2rem;
}

.mobile-footer__newsletter-title {
    color: white;
    font-weight: 600;
    margin-bottom: 0.5rem;
    text-align: center;
}

.mobile-footer__newsletter-description {
    font-size: 0.875rem;
    color: #adb5bd;
    text-align: center;
    margin-bottom: 1rem;
}

.mobile-footer__newsletter-form .form-control {
    background: #495057;
    border: 1px solid #6c757d;
    color: white;
    border-radius: 25px 0 0 25px;
    padding: 0.75rem 1rem;
}

.mobile-footer__newsletter-form .form-control:focus {
    background: #495057;
    border-color: #ffc107;
    color: white;
    box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
}

.mobile-footer__newsletter-form .form-control::placeholder {
    color: #adb5bd;
}

.mobile-footer__newsletter-form .btn {
    border-radius: 0 25px 25px 0;
    padding: 0.75rem 1rem;
    font-weight: 600;
}

/* Mobile Footer Bottom */
.mobile-footer__bottom {
    border-top: 1px solid #495057;
    padding-top: 1rem;
}

.mobile-footer__legal {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1rem;
}

.mobile-footer__legal-link {
    color: #adb5bd;
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.3s ease;
}

.mobile-footer__legal-link:hover {
    color: #ffc107;
}

.mobile-footer__copyright {
    text-align: center;
}

.mobile-footer__copyright p {
    margin: 0;
    font-size: 0.875rem;
    color: #6c757d;
}

/* Desktop Footer Styles (â‰¥ 992px) */
.pc-footer {
    background: linear-gradient(135deg, #212529 0%, #343a40 100%);
    color: #adb5bd;
    padding: 4rem 0 2rem;
    margin-top: auto;
    position: relative;
}

.pc-footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #0891b2 0%, #ffc107 50%, #0891b2 100%);
}

.pc-footer__main {
    padding-bottom: 3rem;
}

.pc-footer__brand-column {
    padding-right: 2rem;
}

.pc-footer__brand {
    margin-bottom: 2rem;
}

.pc-footer__logo {
    height: 50px;
    width: auto;
    margin-bottom: 1.5rem;
    filter: brightness(0) invert(1);
    transition: all 0.3s ease;
}

.pc-footer__logo:hover {
    transform: scale(1.05);
    filter: brightness(0) invert(1) sepia(1) saturate(10000%) hue-rotate(35deg);
}

.pc-footer__description {
    font-size: 1rem;
    line-height: 1.7;
    color: #adb5bd;
    margin-bottom: 2rem;
}

/* Desktop Social Links */
.pc-footer__social-title {
    color: white;
    font-weight: 600;
    margin-bottom: 1rem;
    font-size: 1.1rem;
}

.pc-footer__social-links {
    display: flex;
    gap: 1rem;
}

.pc-footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    background: #495057;
    color: #adb5bd;
    border-radius: 12px;
    text-decoration: none;
    font-size: 1.5rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.pc-footer__social-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 193, 7, 0.3), transparent);
    transition: left 0.5s ease;
}

.pc-footer__social-link:hover {
    background: #ffc107;
    color: #212529;
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(255, 193, 7, 0.3);
}

.pc-footer__social-link:hover::before {
    left: 100%;
}

/* Desktop Footer Columns */
.pc-footer__column {
    margin-bottom: 2rem;
}

.pc-footer__column-title {
    color: white;
    font-weight: 600;
    margin-bottom: 1.5rem;
    font-size: 1.125rem;
    position: relative;
    padding-bottom: 0.5rem;
}

.pc-footer__column-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 30px;
    height: 2px;
    background: #ffc107;
    border-radius: 2px;
}

.pc-footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
}

.pc-footer__links li {
    margin-bottom: 0.75rem;
}

.pc-footer__link {
    color: #adb5bd;
    text-decoration: none;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    display: inline-block;
    position: relative;
    padding-left: 0;
}

.pc-footer__link::before {
    content: '';
    position: absolute;
    left: -15px;
    top: 50%;
    width: 0;
    height: 2px;
    background: #ffc107;
    transition: width 0.3s ease;
    transform: translateY(-50%);
}

.pc-footer__link:hover {
    color: #ffc107;
    padding-left: 15px;
}

.pc-footer__link:hover::before {
    width: 10px;
}

/* Desktop Newsletter */
.pc-footer__newsletter-description {
    font-size: 0.9rem;
    color: #adb5bd;
    line-height: 1.6;
    margin-bottom: 1.5rem;
}

.pc-footer__newsletter-form .form-control {
    background: #495057;
    border: 2px solid #6c757d;
    color: white;
    border-radius: 8px 0 0 8px;
    padding: 0.875rem 1rem;
    font-size: 0.95rem;
    transition: all 0.3s ease;
}

.pc-footer__newsletter-form .form-control:focus {
    background: #495057;
    border-color: #ffc107;
    color: white;
    box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
    transform: translateY(-1px);
}

.pc-footer__newsletter-form .form-control::placeholder {
    color: #adb5bd;
}

.pc-footer__newsletter-form .btn {
    border-radius: 0 8px 8px 0;
    padding: 0.875rem 1.5rem;
    font-weight: 600;
    background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%);
    border: 2px solid #ffc107;
    transition: all 0.3s ease;
}

.pc-footer__newsletter-form .btn:hover {
    background: linear-gradient(135deg, #ffcd39 0%, #e0a800 100%);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(255, 193, 7, 0.3);
}

/* Desktop App Links */
.pc-footer__app-links {
    margin-top: 2rem;
}

.pc-footer__app-title {
    color: white;
    font-weight: 600;
    margin-bottom: 1rem;
    font-size: 1rem;
}

.pc-footer__app-buttons {
    display: flex;
    gap: 0.75rem;
}

.pc-footer__app-button {
    display: block;
    transition: all 0.3s ease;
    border-radius: 8px;
    overflow: hidden;
}

.pc-footer__app-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.3);
}

.pc-footer__app-button img {
    width: auto;
    height: 40px;
    display: block;
}

/* Desktop Footer Bottom */
.pc-footer__bottom {
    border-top: 1px solid #495057;
    padding-top: 2rem;
}

.pc-footer__legal {
    display: flex;
    gap: 2rem;
}

.pc-footer__legal-link {
    color: #adb5bd;
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    position: relative;
}

.pc-footer__legal-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: #ffc107;
    transition: width 0.3s ease;
}

.pc-footer__legal-link:hover {
    color: #ffc107;
}

.pc-footer__legal-link:hover::after {
    width: 100%;
}

.pc-footer__copyright {
    text-align: right;
}

.pc-footer__copyright p {
    margin: 0;
    font-size: 0.9rem;
    color: #6c757d;
    font-style: italic;
}

/* Back to Top Button */
.back-to-top {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #0891b2 0%, #0066cc 100%);
    color: white;
    border: none;
    border-radius: 50%;
    font-size: 1.25rem;
    cursor: pointer;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 1000;
    box-shadow: 0 4px 15px rgba(8, 145, 178, 0.3);
}

.back-to-top.visible {
    opacity: 1;
    visibility: visible;
}

.back-to-top:hover {
    background: linear-gradient(135deg, #0ea5cc 0%, #0066cc 100%);
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(8, 145, 178, 0.4);
}

.back-to-top:active {
    transform: translateY(-1px);
}

/* Mobile Back to Top adjustments */
@media (max-width: 768px) {
    .back-to-top {
        bottom: 1rem;
        right: 1rem;
        width: 45px;
        height: 45px;
        font-size: 1.1rem;
    }
}

/* Responsive Adjustments */
@media (max-width: 575px) {
    .mobile-footer {
        padding: 1.5rem 0 0.5rem;
    }
    
    .mobile-footer__brand {
        margin-bottom: 1.5rem;
        padding-bottom: 1.5rem;
    }
    
    .mobile-footer__logo {
        height: 35px;
    }
    
    .mobile-footer__social-links {
        gap: 0.75rem;
    }
    
    .mobile-footer__social-link {
        width: 40px;
        height: 40px;
        font-size: 1.1rem;
    }
    
    .mobile-footer__legal {
        flex-direction: column;
        text-align: center;
        gap: 0.5rem;
    }
}

@media (min-width: 1200px) {
    .pc-footer {
        padding: 5rem 0 2.5rem;
    }
    
    .pc-footer__brand-column {
        padding-right: 3rem;
    }
    
    .pc-footer__logo {
        height: 55px;
    }
    
    .pc-footer__description {
        font-size: 1.1rem;
    }
    
    .pc-footer__social-link {
        width: 55px;
        height: 55px;
        font-size: 1.6rem;
    }
}

/* Animation Classes */
.footer-fade-in {
    animation: footerFadeIn 0.6s ease-out;
}

@keyframes footerFadeIn {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Loading States */
.pc-footer__newsletter-form .btn.loading {
    position: relative;
    color: transparent;
}

.pc-footer__newsletter-form .btn.loading::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 16px;
    height: 16px;
    margin: -8px 0 0 -8px;
    border: 2px solid transparent;
    border-top: 2px solid #212529;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

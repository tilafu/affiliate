<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>How many years of experience do you have?</title>
    <link rel="icon" type="image/png" href="images/f.png">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <!-- Wizard Components CSS -->
    <link rel="stylesheet" href="css/components/wizard-header.css">
    <link rel="stylesheet" href="css/components/wizard-footer.css">
    <!-- Page-specific CSS -->
    <link rel="stylesheet" href="css/pages/relevant-experience.css">
</head>

<body class="page-relevant-experience">
    <!-- Wizard Header -->
    <div id="wizard-header-container"></div>
    
    <div class="why-remote-container">
        <div class="container">
            <!-- Main Title -->
            <h4 class="mb-2 text-center">How many years of experience do you have?</h4>
            
            <!-- Work Type Options -->
            <div class="work-options">
                <!-- 100% Remote Work -->
                <div class="work-option" data-work-type="100-remote" tabindex="0">
                    <!-- <div class="work-option-icon">
                        <img src="images/remote-work.png" alt="100% Remote Work" class="work-option-image" />
                    </div> -->
                    <div class="work-option-content">
                        <h3 class="work-option-title">Less than 3 years</h3>
                        <!-- <p class="work-option-description mobile-only">No daily commute to the office, work from home or the location of your choice.</p> -->
                    </div>
                </div>
                
                <!-- Hybrid Remote Work -->
                <div class="work-option" data-work-type="hybrid" tabindex="0">
                    <!-- <div class="work-option-icon">
                        <img src="images/hybrid-remote-work.png" alt="Hybrid Remote Work" class="work-option-image" />
                    </div> -->
                    <div class="work-option-content">
                        <h3 class="work-option-title">3-5 years</h3>
                        <!-- <p class="work-option-description mobile-only">A blend of working in the office near you and working from home.</p> -->
                    </div>
                </div>
                
                <!-- Option for Remote Work -->
                <div class="work-option" data-work-type="flexible" tabindex="0">
                    <!-- <div class="work-option-icon">
                        <img src="images/option-for-remote-work.png" alt="Option for Remote Work" class="work-option-image" />
                    </div> -->
                    <div class="work-option-content">
                        <h3 class="work-option-title">5-10 years</h3>
                        <!-- <p class="work-option-description mobile-only">Mostly in office but with occasional opportunity for flexibility.</p> -->
                    </div>
                </div>

                <!-- 10+ years -->
                <div class="work-option" data-work-type="flexible" tabindex="0">
                    <!-- <div class="work-option-icon">
                        <img src="images/option-for-remote-work.png" alt="Option for Remote Work" class="work-option-image" />
                    </div> -->
                    <div class="work-option-content">
                        <h3 class="work-option-title">10+ years</h3>
                        <!-- <p class="work-option-description mobile-only">Mostly in office but with occasional opportunity for flexibility.</p> -->
                    </div>
                </div>
            </div>
            
            <!-- Success Message -->
            <!-- <div class="success-message" id="successMessage">
                <i class="fas fa-thumbs-up"></i>Nice choice! No commute for you!
            </div> -->
            
            <!-- Desktop Next Button -->
            <button class="next-button d-none d-md-block" id="nextBtn">
                Next
            </button>
        </div>
    </div>

    <!-- Wizard Footer -->
    <div id="wizard-footer-container"></div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Wizard Components JS -->
    <script src="js/components/wizard-header.js"></script>
    <script src="js/components/wizard-footer.js"></script>
    <!-- Page-specific JavaScript -->
    <script src="js/pages/relevant-experience.js"></script>
</body>
</html>


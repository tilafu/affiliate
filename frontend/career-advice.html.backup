        // Newsletter subscription functionality
        async function handleNewsletterSubmission(form, subscriptionType = 'general') {
            const formData = new FormData(form);
            const email = formData.get('email') || form.querySelector('input[type="email"]').value;
            
            if (!email) {
                showNotification('Please enter a valid email address', 'error');
                return;
            }

            try {
                const response = await fetch('/api/interactions/newsletter/subscribe', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        email: email,
                        subscription_type: subscriptionType,
                        source_page: 'career-advice'
                    })
                });

                const result = await response.json();

                if (response.ok) {
                    showNotification(result.message, 'success');
                    form.reset();
                    
                    // Track successful subscription
                    trackInteraction('form_submit', 'career-advice', 'newsletter_subscribe_success', {
                        subscription_type: subscriptionType
                    });
                } else {
                    showNotification(result.message, 'error');
                }
            } catch (error) {
                console.error('Newsletter subscription error:', error);
                showNotification('An error occurred. Please try again later.', 'error');
            }
        }

        // Track interaction function
        async function trackInteraction(interactionType, pageName, elementName, metadata = {}) {
            try {
                await fetch('/api/interactions/interaction/track', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        interaction_type: interactionType,
                        page_name: pageName,
                        element_name: elementName,
                        metadata: JSON.stringify(metadata)
                    })
                });
            } catch (error) {
                console.error('Tracking error:', error);
                // Don't show error to user - tracking failures shouldn't interrupt UX
            }
        }

        // Show notification function
        function showNotification(message, type = 'info') {
            // Remove existing notifications
            const existingNotifications = document.querySelectorAll('.notification');
            existingNotifications.forEach(notification => notification.remove());

            // Create notification element
            const notification = document.createElement('div');
            notification.className = `notification notification-${type}`;
            notification.innerHTML = `
                <div class="notification-content">
                    <i class="fas ${type === 'success' ? 'fa-check-circle' : type === 'error' ? 'fa-exclamation-circle' : 'fa-info-circle'}"></i>
                    <span>${message}</span>
                    <button class="notification-close" onclick="this.parentElement.parentElement.remove()">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            `;

            // Add notification to page
            document.body.appendChild(notification);

            // Auto-remove after 5 seconds
            setTimeout(() => {
                if (notification.parentElement) {
                    notification.remove();
                }
            }, 5000);

            // Animate in
            setTimeout(() => {
                notification.classList.add('show');
            }, 100);
        }

        // Initialize page functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Handle newsletter form submissions
            const newsletterForms = document.querySelectorAll('.newsletter-form');
            newsletterForms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    const subscriptionType = this.dataset.subscriptionType || 'career_advice';
                    handleNewsletterSubmission(this, subscriptionType);
                });
            });

            // Handle "View All Tutorials" button
            const viewAllButtons = document.querySelectorAll('.view-all-btn');
            viewAllButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    // Track the interaction
                    trackInteraction('button_click', 'career-advice', 'view_all_tutorials');
                    
                    // Update modal content to focus on tutorials instead of newsletter
                    const modal = document.getElementById('newsletterModal');
                    if (modal) {
                        const modalTitle = modal.querySelector('.newsletter-title');
                        const modalDescription = modal.querySelector('.newsletter-description');
                        
                        if (modalTitle) {
                            modalTitle.textContent = 'Get More Career Tutorials';
                        }
                        if (modalDescription) {
                            modalDescription.textContent = 'Subscribe to receive weekly career tutorials, job search tips, and exclusive video content delivered to your inbox.';
                        }
                        
                        // Set subscription type to tutorials
                        const form = modal.querySelector('.newsletter-form');
                        if (form) {
                            form.dataset.subscriptionType = 'tutorials';
                        }
                    }
                });
            });

            // Track page view
            trackInteraction('page_view', 'career-advice');

            // Track tutorial video interactions
            const videos = document.querySelectorAll('.video-container video');
            videos.forEach((video, index) => {
                const tutorialName = video.closest('.tutorial-card').querySelector('.tutorial-title').textContent;
                
                video.addEventListener('play', function() {
                    trackTutorialInteraction(tutorialName, 'play');
                });
                
                video.addEventListener('pause', function() {
                    trackTutorialInteraction(tutorialName, 'pause', {
                        watch_duration: Math.floor(video.currentTime),
                        total_duration: Math.floor(video.duration)
                    });
                });
                
                video.addEventListener('ended', function() {
                    trackTutorialInteraction(tutorialName, 'complete', {
                        watch_duration: Math.floor(video.duration),
                        total_duration: Math.floor(video.duration),
                        completion_percentage: 100
                    });
                });
            });
        });

        // Track tutorial interactions
        async function trackTutorialInteraction(tutorialName, actionType, metadata = {}) {
            try {
                await fetch('/api/interactions/tutorial/track', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        tutorial_name: tutorialName,
                        action_type: actionType,
                        watch_duration: metadata.watch_duration || 0,
                        total_duration: metadata.total_duration || 0,
                        completion_percentage: metadata.completion_percentage || 0
                    })
                });
            } catch (error) {
                console.error('Tutorial tracking error:', error);
            }
        }
    </script>
    
    <!-- Video Player Functionality -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Handle video play/pause overlay
            const videos = document.querySelectorAll('.video-container video');
            
            videos.forEach(video => {
                const overlay = video.nextElementSibling; // Get the overlay element
                
                // Hide overlay when video starts playing
                video.addEventListener('play', function() {
                    overlay.style.opacity = '0';
                    overlay.style.pointerEvents = 'none';
                });
                
                // Show overlay when video is paused
                video.addEventListener('pause', function() {
                    overlay.style.opacity = '1';
                    overlay.style.pointerEvents = 'none';
                });
                
                // Show overlay when video ends
                video.addEventListener('ended', function() {
                    overlay.style.opacity = '1';
                    overlay.style.pointerEvents = 'none';
                });
                
                // Handle click on overlay to play video
                overlay.addEventListener('click', function() {
                    video.play();
                });
            });
        });
    </script>
    

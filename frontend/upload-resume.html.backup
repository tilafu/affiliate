            border-color: #0dcaf0 !important;
        }

        .page-upload__selection-overlay {
            transition: all 0.4s ease;
            backdrop-filter: blur(2px);
        }

        .page-upload__back-btn {
            transition: all 0.3s ease;
            border-width: 2px;
        }

        .page-upload__back-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(108, 117, 125, 0.3);
        }

        .page-upload__next-btn {
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            box-shadow: 0 8px 25px rgba(255, 107, 53, 0.3);
            position: relative;
            overflow: hidden;
        }

        .page-upload__next-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: left 0.6s ease;
        }

        .page-upload__next-btn:hover:not(:disabled)::before {
            left: 100%;
        }

        .page-upload__next-btn:hover:not(:disabled) {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 12px 35px rgba(255, 107, 53, 0.4);
        }

        .page-upload__next-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .page-upload__benefit {
            transition: all 0.3s ease;
            border-radius: 12px;
        }

        .page-upload__benefit:hover {
            background: rgba(13, 202, 240, 0.05);
            transform: translateY(-5px);
        }

        .page-upload__benefit-icon {
            transition: all 0.3s ease;
        }


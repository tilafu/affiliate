{
  "name": "flexjobs",
  "version": "1.0.0",
  "description": "A full-stack remote job board application built with Node.js, Express, PostgreSQL, and Bootstrap",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "node database/migrate.js",
    "rollback": "node database/rollback.js",
    "db:setup": "npm run migrate",
    "db:reset": "npm run rollback && npm run migrate",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "jobs",
    "remote",
    "flexjobs",
    "employment",
    "career",
    "nodejs",
    "express",
    "postgresql"
  ],
  "author": "FlexJobs Team",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-apple": "^2.0.2",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3"
  },
